<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.menus.UserInfoDialog"
            prefHeight="400.0" prefWidth="650.0" fx:id="background">
    <center>
        <HBox alignment="CENTER" spacing="10" styleClass="thin-rounded-card" maxWidth="350" maxHeight="250">
            <ImageView fx:id="profilePic" fitWidth="100" fitHeight="100"/>
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="usernameLabel"/>
                <Label fx:id="nicknameLabel"/>
                <Label fx:id="scoreLabel"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
