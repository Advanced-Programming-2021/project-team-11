<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.menus.RootMenu">
   <children>
      <ImageView fitHeight="600.0" fitWidth="800.0">
         <image>
            <Image url="@../assets/root-background.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="225.0" fitWidth="300.0" layoutX="250.0" layoutY="350.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/title.png" />
         </image>
      </ImageView>
      <ImageView fx:id="loginButton" fitHeight="60.0" fitWidth="200.0" layoutX="175.0" layoutY="480.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/button.png" />
         </image>
      </ImageView>
      <Label alignment="TOP_CENTER" contentDisplay="CENTER" layoutX="175.0" layoutY="480.0" onMouseEntered="#enterLoginButton" onMouseExited="#exitLoginButton" prefHeight="60.0" prefWidth="200.0" text="Login" textAlignment="CENTER" textFill="#151b37" wrapText="true">
         <font>
            <Font name="Times Roman" size="45.0" />
         </font>
      </Label>
      <ImageView fx:id="registerButton" fitHeight="60.0" fitWidth="200.0" layoutX="425.0" layoutY="480.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/button.png" />
         </image>
      </ImageView>
      <Label alignment="TOP_CENTER" contentDisplay="CENTER" layoutX="425.0" layoutY="480.0" onMouseEntered="#enterRegisterButton" onMouseExited="#exitRegisterButton" prefHeight="60.0" prefWidth="200.0" text="Sign up" textAlignment="CENTER" textFill="#151b37" wrapText="true">
         <font>
            <Font name="Times Roman" size="46.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
